<%- include('../partial/head') %>
<body>
    
    <%- include('../partial/navbar') %>
    <section id="header">
        <h1>
            WELCOME TO AIRBNB HOME
        </h1>
        <div id="search">
            <input type="text" placeholder="SEARCH FOR HOME">
            <button>
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </section>
    <main>
        <ul>
           <% REGISTERHOME.forEach(home=>{ %>
           <li class='HOMES'>
               <div class='HOME'>
                    <div class='images'>
                        <img class='himg' src="<%= home.Image %>" alt="Home Image">
                    </div>
                    <p class='p1'>
                        <%= home.Name %>
                    </p>
                    <div class='MAIN'>
                        <div class='LEFT'>
                            <p class='p2'>
                                LOCATION
                            </p>
                            <p class='p3'>
                                PRICE
                            </p>
                            <p class='p3'>
                                RATINGS
                            </p>
                        </div>
                        <div class='RIGHT'>    
                            <p class='p2'>
                                <i class="fa-solid fa-location-dot"></i> <%= home.Location %>
                            </p>
                            <p class='p3'>
                                â‚¹<%= home.Price %>/Night
                            </p>
                            <p class='p3'>
                                <i class="fa-solid fa-star"></i> <%= home.Ratings %>
                            </p>
                        </div>
                    </div>
                    <div class="btncon">
                       <button class='Button' onclick="window.location.href='/details/<%= home.Id %>'">DETAILS</button>
                    </div>
               </div>
           </li>
           <% }); %>
       </ul> 
    </main>
    <footer>
        <p>&copy; 2024 AIRBNB CLONE</p>
    </footer>
</body>
</html>
               